<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:paddingLeft="@dimen/activity_horizontal_margin"
              android:paddingRight="@dimen/activity_horizontal_margin"
              android:paddingTop="@dimen/activity_vertical_margin"
              android:paddingBottom="@dimen/activity_vertical_margin">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/icon_about"
        android:src="@mipmap/ic_launcher"
        android:layout_marginBottom="@dimen/activity_vertical_margin" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/developedby_title"
        android:text="@string/about_made"
        android:textAlignment="center"/>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/me_textview"
        android:text="@string/about_made_person"
        android:textSize="16sp"
        android:textAlignment="center"
        android:textStyle="bold"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/community_textview"
        android:text="@string/about_made_community"
        android:textSize="14sp"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:textAlignment="center"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/usage"
        android:text="@string/about_contentbelonging"
        android:textSize="12sp"
        android:fontFamily="sans-serif-light"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:textAlignment="center"/>

    <ImageView
        android:id="@+id/donationImageView"
        android:layout_width="match_parent"
        android:adjustViewBounds="true"
        android:layout_height="32dp"/>

    <View
        android:layout_width="200dp"
        android:layout_height="1dp"
        android:id="@+id/separator"
        android:background="@color/colorDivider"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:layout_gravity="center_horizontal"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/using_title"
        android:text="@string/using"
        android:textSize="14sp"
        android:textAllCaps="true"
        android:fontFamily="sans-serif-condensed"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:textAlignment="center"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:textStyle="bold"/>



</LinearLayout>